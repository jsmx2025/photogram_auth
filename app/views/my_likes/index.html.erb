<div class="page-header">
  <h1>
    My Likes
    <a href="/likes/new" class="btn btn-lg btn-success">New Like</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Photo ID</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
      <% @my_likes.each do |my_like| %>
      <tr>
        <td><%= my_like.photo.id %></td>
        <td><%= my_like.photo.caption %></td>
        <td><img src="<%= my_like.photo.image %>"></td>
        <td>
          <a href="/likes/<%= my_like.id %>" class="btn btn-primary">Show</a>
          <a href="/likes/<%= my_like.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_like/<%= my_like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
